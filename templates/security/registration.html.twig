{% extends "base.html.twig" %}

{% block body %}
    <h1>Ajouter un membre !</h1>

    {{ form_start(form) }}
    
    {{ form_row(form.name, {'label': 'Nom', 'attr': {'placeholder': 'Nom du membre...' }}) }}
    {{ form_row(form.firstname, {'label': 'Prénom', 'attr': {'placeholder': 'Prénom du membre...' }})}}
    {{ form_row(form.email, {'label': 'Adresse email', 'attr': {'placeholder': 'Email du membre...' }}) }}
    {{ form_row(form.password, {'label': 'Mot de passe', 'attr': {'placeholder': 'Bientot générer par email...' }}) }}
    {{ form_row(form.money, {'label': 'Grain de sel attribuée..', 'attr': {'placeholder': 'Grain de sel du membre...' }}) }}
    {{ form_row(form.address, {'label': 'Addresse ( facultatif )', 'attr': {'placeholder': 'Addresse facultatif si privée...' }}) }}

    <button type="submit" class="btn btn-success">Valider</button>
    {{ form_end(form)}}
{% endblock %}