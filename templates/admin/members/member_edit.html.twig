                        {{ form_label(form.money, 'Grains de sel :') }}
                        {{ form_widget(form.money) }}
                    </div>

                    <div class="form-group mb-2">
                        {{ form_label(form.roles, 'RÃ´les :') }}
                        {{ form_widget(form.roles) }}
                    </div>

                    <div class="form-group text-center mb-0">
                        <a class="btn btn-green" href="{{ path('admin_members_list') }}"><i class="fas fa-chevron-left"></i> Retour</a>
                        <button class="btn btn-success">{{ button_label|default('Modifier') }}</button>
                    </div>
                {{ form_end(form) }}

            </div>
            <div class="background_green"></div>
        </div>
    </main>
{% endblock %}
