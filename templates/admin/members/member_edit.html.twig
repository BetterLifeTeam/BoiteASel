{% extends 'base.html.twig' %}

{% block title %}Modification d'un membre{% endblock %}

{% block body %}
    <main role="main" id="admin_member_edit">
        <div class="container-md">
            <div class="row">
                <div class="col-12">
                    <h1 class="h1 text text-center mb-4">MODIFIER UN MEMBRE</h1>
                </div>

                {{ form_start(form, {'attr': { 'id': 'member_edit_form', 'class': 'col-lg-6 col-md-12' } }) }}
