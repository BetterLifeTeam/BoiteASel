{% extends 'base.html.twig' %}

{% block title %}Hello NotificationController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

     <table class="table">
        <thead>
            <tr>
                <th>Content</th>
            </tr>
        </thead>
        <tbody>
        {% for notification in notifications %}
            <tr>
                <td>{{ notification.content }} {{ notification.isRead }} <a href="{{ path("notification_reading", {"id": notification.id} ) }}"> x </a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune Notification</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
